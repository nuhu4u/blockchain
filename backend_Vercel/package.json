{
  "name": "election-backend",
  "version": "1.0.0",
  "description": "Backend for the election system with NIN verification and blockchain integration",
  "main": "server.js",
  "scripts": {
    "preinstall": "node guard-install.js",
    "start": "node bootstrap.cjs",
    "dev": "nodemon bootstrap.cjs",
    "dev:clean": "npm run kill:all && npm run start",
    "kill:all": "taskkill /F /IM node.exe 2>nul || echo 'No node processes found'",
    "clean:lock": "del .server.lock 2>nul || echo 'No lock file found'",
    "restart:clean": "npm run kill:all && npm run clean:lock && npm run start",
    "test": "jest --verbose --coverage",
    "test:hardhat": "hardhat test",
    "test:contracts": "hardhat test test/Election.test.js",
    "test:service": "hardhat test test/blockchainService.test.js",
    "test:coverage": "hardhat coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:seed": "node prisma/seed.js",
    "db:seed": "npm run prisma:generate && npm run prisma:seed",
    "update:once": "echo. > .allow-install && npm install --no-audit --prefer-offline && npm shrinkwrap && del .allow-install",
    "vote-sync:test": "node scripts/testVoteSync.js",
    "vote-sync:manual": "node scripts/manualVoteSync.js"
  },
  "keywords": [
    "election",
    "voting",
    "blockchain",
    "nin",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@prisma/client": "^4.16.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.5.7",
    "axios": "^1.12.1",
    "bcrypt": "^6.0.0",
    "chai": "^4.3.7",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.6.1",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "helmet": "^6.2.0",
    "http-status": "^2.1.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.2.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "hardhat": "^2.26.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "uuid": "^9.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
